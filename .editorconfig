root = true

# Global settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Frontend files (JavaScript, TypeScript, JSON, CSS, HTML)
[*.{js,jsx,ts,tsx,json,css,scss,html,md}]
indent_style = space
indent_size = 2
max_line_length = 100

# Backend files (Python)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab 